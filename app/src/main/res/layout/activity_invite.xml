<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/layout_default_pading"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:textSize="@dimen/text_size_1"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/activity_padding_top"
            android:layout_marginBottom="@dimen/layout_default_pading"
            android:clickable="true"
            android:tag="recode"
            android:text="@string/invite_get_error_hint"
            android:background="@drawable/shape_circle_maincolor"
            android:id="@+id/tv_recode_invite" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:layout_height="1px"
                android:background="@color/bg_line"
                android:layout_weight="1"
                android:layout_width="wrap_content"/>
            <TextView
                android:layout_height="wrap_content"
                android:text="发送邀请码到"
                android:layout_margin="@dimen/layout_default_pading"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"/>
            <View
                android:layout_height="1px"
                android:background="@color/bg_line"
                android:layout_weight="1"
                android:layout_width="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/layout_default_pading"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_qq_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/titlebar_selector"
                android:clickable="true"
                android:padding="@dimen/layout_default_pading"
                android:src="@mipmap/icon_share_qq"/>
            <ImageView
                android:id="@+id/iv_wexin_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/input_vertical_margin"
                android:clickable="true"
                android:padding="@dimen/layout_default_pading"
                android:background="@drawable/titlebar_selector"
                android:src="@mipmap/icon_share_wx"/>
            <ImageView
                android:id="@+id/iv_msg_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/input_vertical_margin"
                android:clickable="true"
                android:padding="@dimen/layout_default_pading"
                android:src="@mipmap/icon_share_msg"
                android:background="@drawable/titlebar_selector"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/text_style_3"
                android:maxWidth="200dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/invite_toast"
                android:lineSpacingExtra="@dimen/layout_default_pading"
                android:textColor="@color/colorPrimary"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
</layout>