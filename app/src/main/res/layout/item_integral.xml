<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="bean"
            type="com.weyko.shops.bean.IntegralListBean.IntegralItemBean"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/ll_item_integral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_default_pading"
        android:gravity="center_vertical"
        android:clickable="true"
        android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_title_item_integral"
                style="@style/text_style_2"
                android:text="@{bean.taskName}"/>
            <TextView
                android:id="@+id/tv_date"
                style="@style/text_style_3"
                android:layout_below="@+id/tv_title_item_integral"
                android:text="@{bean.date}"/>
            <TextView
                style="@style/text_style_3"
                android:layout_below="@+id/tv_title_item_integral"
                android:layout_toRightOf="@+id/tv_date"
                android:text="@{bean.time}"/>
        <TextView
            style="@style/text_style_1"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:text="@{String.valueOf(bean.integral)}"/>
    </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/layout_title_pading"
            style="@style/a_line"/>
    </LinearLayout>
</layout>