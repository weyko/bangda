<?xml version="1.0" encoding="utf-8"?>
                                                                   
<LinearLayout
    android:id="@+id/ll_me"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:tag="layout/fragment_me_0" xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        style="@style/a_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@android:color/white"
        android:padding="@dimen/activity_vertical_margin">
        <ImageView
            android:id="@+id/iv_header_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_header"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:paddingRight="@dimen/layout_default_pading"
            android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name_me"
            style="@style/text_style_2"
            android:text="沙漠狼"
            android:maxLines="2"
            />
        <TextView
            style="@style/text_style_3"
            android:id="@+id/tv_level_me"
            android:layout_marginTop="@dimen/layout_default_pading"
            android:drawableRight="@mipmap/icon_helper"
            android:drawablePadding="@dimen/layout_title_pading"
            android:clickable="true"
            android:text="等级:至尊" /></LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@mipmap/icon_qrcode"/>
    </LinearLayout>
    <ImageView
        style="@style/a_line"/>
    <ImageView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        style="@style/a_line"/>
    <TextView
        android:id="@+id/tv_tasks_me"
        android:text="@string/me_tasks"
        style="@style/item_setting"/>
    <ImageView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        style="@style/a_line"/>
    <TextView
        android:id="@+id/tv_wallet_me"
        android:text="@string/me_wallet"
        style="@style/item_setting"/>
    <ImageView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        style="@style/a_line"/>
    <TextView
        android:id="@+id/tv_share_me"
        android:text="@string/me_share"
        style="@style/item_setting"/>
    <ImageView
        style="@style/a_line"/>
    <ImageView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        style="@style/a_line"/>
    <TextView
        android:id="@+id/tv_setting_me"
        android:text="@string/me_setting"
        style="@style/item_setting"/>
    <ImageView
        style="@style/a_line"/>
</LinearLayout>
         