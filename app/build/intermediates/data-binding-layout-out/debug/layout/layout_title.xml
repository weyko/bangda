<?xml version="1.0" encoding="utf-8"?>
                                                                   
  <RelativeLayout
      android:id="@+id/ll_title_main"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@color/colorPrimary"
      android:gravity="center_vertical" android:tag="layout/layout_title_0" xmlns:android="http://schemas.android.com/apk/res/android">
      <ImageView
          android:id="@+id/iv_back"
          android:layout_width="40dp"
          android:layout_height="match_parent"
          android:padding="@dimen/layout_input_pading"
          android:background="@drawable/titlebar_selector"
          android:clickable="true"
          android:layout_alignParentLeft="true"
          android:visibility="invisible"
          android:layout_centerVertical="true"
          android:src="@mipmap/icon_back"/>
        <TextView
            android:id="@+id/tv_title"
            style="@style/text_style_1"
            android:layout_centerInParent="true"
            android:text="@string/tab_home"/>
      <TextView
          android:id="@+id/tv_menu_title"
          style="@style/text_style_4"
          android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
          android:minWidth="50dp"
          android:layout_centerVertical="true"
          android:visibility="invisible"/>
  </RelativeLayout>
         