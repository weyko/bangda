<?xml version="1.0" encoding="utf-8"?>
                                                                   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/activity_set_0" xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            style="@style/a_line"/>
        <TextView
            android:id="@+id/tv_reset_pwd_set"
            android:text="@string/set_reset_pwd"
            style="@style/item_setting"/>
        <ImageView
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            style="@style/a_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_checkversion_set"
                android:text="@string/set_version"
                android:layout_centerVertical="true"
                style="@style/item_setting"
                />
            <TextView
                android:id="@+id/tv_version_set"
                style="@style/text_style_3"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:enabled="false"
                android:text=""/>
        </RelativeLayout>
        <ImageView
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            style="@style/a_line"/>
        <TextView
            android:id="@+id/tv_reback_set"
            android:text="@string/set_reback"
            android:layout_centerVertical="true"
            style="@style/item_setting" />
        <ImageView
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            style="@style/a_line"/>
        <TextView
            android:id="@+id/tv_connect_set"
            android:text="@string/set_connect"
            android:layout_centerVertical="true"
            style="@style/item_setting" />
        <ImageView
            style="@style/a_line"/>
        <ImageView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            style="@style/a_line"/>
        <TextView
            android:id="@+id/tv_exit_set"
            android:text="@string/set_exit"
            style="@style/item_setting"
            android:drawableRight="@null"/>
        <ImageView
            style="@style/a_line"/>
        <TextView
            style="@style/text_style_3"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/layout_default_pading"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_service_set"
                style="@style/text_style_2"
                android:textColor="@color/colorPrimary"
                android:clickable="true"
                android:text="@string/set_service" />
            <TextView
                style="@style/text_style_3"
                android:gravity="center"
                android:padding="0dp"
                android:lineSpacingExtra="3dp"
                android:text="@string/set_copyright" />
        </LinearLayout>
    </LinearLayout>
         