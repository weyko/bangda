<?xml version="1.0" encoding="utf-8"?>
                                                                   
    
                 
                       
                                                                       
           
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/item_record_0" xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/ll_item_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_default_pading"
        android:gravity="center_vertical"
        android:clickable="true"
        android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_title_item_record"
                style="@style/text_style_2"
                android:tag="binding_1"                 />
            <TextView
                android:id="@+id/tv_date"
                style="@style/text_style_3"
                android:layout_below="@+id/tv_title_item_record"
                android:tag="binding_2"    />
            <TextView
                style="@style/text_style_3"
                android:layout_below="@+id/tv_title_item_record"
                android:layout_toRightOf="@+id/tv_date"
                android:tag="binding_3"    />
        <TextView
            style="@style/text_style_1"
            android:layout_width="wrap_content"
            android:tag="binding_4"                                                   
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
                                                               />
    </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/layout_title_pading"
            style="@style/a_line"/>
    </LinearLayout>
         