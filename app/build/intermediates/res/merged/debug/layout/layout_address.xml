<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/ll_layout_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@android:color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <com.weyko.shops.view.DrawableClickableEditText
                style="@style/input_style"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:id="@+id/cet_input_address"
                android:background="@color/colorPrimary"
                android:singleLine="true"
                android:textColorHint="@color/colorAccentUnable"
                android:hint="@string/send_address" />
            <TextView
                android:id="@+id/tv_close_address"
                style="@style/text_style_1"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:background="@drawable/titlebar_selector"
                android:text="关闭"/>
        </LinearLayout>
        <ListView
            android:id="@+id/lv_list_layout_address"
            android:layout_width="match_parent"
            android:cacheColorHint="@null"
            android:divider="@null"
            android:layout_height="match_parent"/>
    </LinearLayout>
 </layout>