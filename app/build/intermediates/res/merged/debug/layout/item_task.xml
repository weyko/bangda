<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
     <data>
          <variable
              name="bean"
              type="com.weyko.shops.task.get.TaskListBean.TaskItemBean" />
     </data>
<LinearLayout
    android:id="@+id/ll_item_task"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/item_selector_stroke"
         android:layout_marginTop="@dimen/activity_horizontal_margin"
         android:layout_marginLeft="@dimen/activity_horizontal_margin"
         android:layout_marginRight="@dimen/activity_horizontal_margin"
         android:padding="@dimen/layout_title_pading"
         android:orientation="vertical">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">
            <TextView
                style="@style/text_style_2"
                android:padding="0dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/colorPrimary"
              android:text="@string/task_name"/>
              <TextView
                  style="@style/text_style_3"
                  android:layout_width="match_parent"
                  android:textColor="@color/colorPrimary"
                  android:gravity="right|center_vertical"
                  android:padding="0dp"
                  android:layout_marginRight="4dp"
                  android:text="@{bean.time}"/>
          </LinearLayout>
         <TextView
             style="@style/text_style_3"
             android:layout_width="match_parent"
             android:singleLine="true"
             android:padding="4dp"
             android:text="@{bean.taskName}"/>
         <TextView
             style="@style/text_style_2"
             android:padding="0dp"
             android:layout_marginLeft="4dp"
             android:textColor="@color/colorPrimary"
             android:text="@string/task_money_reward"/>
         <TextView
             style="@style/text_style_3"
             android:layout_width="match_parent"
             android:padding="4dp"
             android:text="@{String.valueOf(bean.moneyReward)}"/>
         <TextView
             style="@style/text_style_2"
             android:padding="0dp"
             android:layout_marginLeft="4dp"
             android:textColor="@color/colorPrimary"
             android:text="@string/task_destination"/>
         <TextView
             style="@style/text_style_3"
             android:layout_width="match_parent"
             android:singleLine="true"
             android:padding="4dp"
             android:text="@{bean.endPosition}"/>
     </LinearLayout>
</LinearLayout>
</layout>